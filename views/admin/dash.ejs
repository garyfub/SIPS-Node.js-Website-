<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<!-- Bootstrap Core JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<!-- MetisMenu JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/metisMenu/2.4.0/metisMenu.min.js"></script>

<script>

    // jquery extend function for sending post request to next page
    $.extend(
            {
                redirectPost: function(location, args)
                {
                    var form = '';
                    $.each( args, function( key, value ) {
                        console.log("Key: " + key + ", Value: " + value);
                        form += '<input type="hidden" name="'+key+'" value="'+value+'">';
                    });
                    $('<form id="post_form" action="'+location+'" method="POST">'+form+'</form>').appendTo('body').submit();

                    $('#post_form').remove();
                }
            });

    $(document).ready(function () {
        $(function () {
            $('#sideMenu').metisMenu();
        });

        $('.table-radio tr').hover(
                function () {
                    $(this).find('td .btn').removeClass("invisible");
                },
                function () {
                    $(this).find('td input[type=radio]').prop('checked', true);
                    $(this).find('td .btn').addClass("invisible");
                }
        );

        $(".delete-group").click(function () {
            var selectedGroup = $('input[name=group]:checked').val()
            $.ajax({
                type: 'POST',
                url: '/admin/delete-group',
                data: {
                    group: selectedGroup
                },
                complete: function () {
                    window.location.reload(true);
                }
            });
        });

        $(".edit-group").click(function () {
            var selectedGroup = $('.selectedGroup:checked').val();
            var groupName =  $(this).closest('tr').find('td:eq(1)').text();
            var inviteCode =  $(this).closest('tr').find('td:eq(4)').text();
            console.log("Editing " + inviteCode + ", " + groupName + ", " + selectedGroup);

            $.redirectPost('/admin/edit-group', {groupID: selectedGroup, groupName: groupName, inviteCode: inviteCode});

        });
    });

</script>

</body>
</html>
