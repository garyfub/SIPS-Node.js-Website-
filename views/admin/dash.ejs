<!-- Page Content -->
<div id="wrapper" class="container-fluid col-lg-10">

    <div class="row">
        <div class="container-fluid">


            <div class="col-lg-12">

                <div class="panel panel-default">
                    <div class="content">
                        <h1>Admin Dashboard</h1>
                        <p><%= 'Welcome, ' + name %></p>
                    </div>
                </div>


                <div class="panel panel-default">
                    <div class="panel-heading">Groups for Organization</div>
                    <br>
                    <div class="content">
                        <table class="table table-striped table-hover table-radio">
                            <thead>
                            <tr class="active">
                                <th class="col-lg-1 hidden">Select</th>
                                <th class="col-lg-2">Group Name</th>
                                <th class="col-lg-2">Type</th>
                                <th class="col-lg-1">Group Members</th>
                                <th class="col-lg-1 hidden">Invite Code</th>
                                <th class="col-lg-1">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if(groups.length == 0){ %>
                            <tr class="warning">
                                <td class="hidden"></td>
                                <td>Hello! Please add a group</td>
                                <td></td>
                                <td></td>
                                <td class="hidden"></td>
                                <td>
                                    <a href="/admin/create-group" class="btn btn-sm invisible"><span
                                                class="fa fa-plus-square"></span> Add new group
                                    </a>
                                </td>
                            </tr>
                            <% }
                            for(var i = 0; i < groups.length; i++){ %>
                            <tr>
                                <td class="hidden"><input name="group" class="selectedGroup" type="radio" value="<%= groups[i]["GROUPID"] %>">
                                </td>
                                <td class="group_name"><%= groups[i]["NAME"] %></td>
                                <td class="group_org"><%= groups[i]["ORGANIZATIONID"] %></td>
                                <td class="group_member">null</td>
                                <td class="group_code hidden"><%= groups[i]["INVITE_CODE"] %></td>
                                <td>
                                    <!-- Table button -->
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-primary btn-sm dropdown-toggle invisible"
                                                data-toggle="dropdown"><span class="fa fa-cog"></span></button>
                                        <ul class="dropdown-menu pull-right" role="menu">
                                            <li><a href="#" class="edit-group"><span class="fa fa-cog "></span> edit</a></li>
                                            <li><a href="/results"><span class="fa fa-pie-chart "></span> View
                                                    Results</a></li>
                                            <li class="divider"></li>
                                            <li><a href="#" class="delete-group"><span class="fa fa-trash-o "></span>
                                                    Delete Group</a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                            <% } %>
                            </tbody>
                        </table>
                        <br>
                        <!-- Add new Group -->
                        <a href="/admin/create-group" class="btn btn-primary-outline"><span
                                    class="fa fa-plus-square"></span> Add new group
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>


